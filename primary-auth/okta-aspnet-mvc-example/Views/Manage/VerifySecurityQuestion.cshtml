@model okta_aspnet_mvc_example.Models.VerifySecurityQuestionViewModel
@{
    ViewBag.Title = ViewBag.Title ?? "Answer the security question.";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("VerifySecurityQuestionAsync", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Answer the security question.</h4>
    <div>@Model.Question</div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <div class="row row-no-gutters">
                @Html.LabelFor(m => m.Answer, new { @class = "control-label" })
            </div>
            <div class="row row-no-gutters">
                @Html.TextBoxFor(m => m.Answer, new { @class = "form-control", @id = "passcodeInput" })
                @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary btn-stretch-wide" id="submitBtn" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
