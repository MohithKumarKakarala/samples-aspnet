@model okta_aspnet_mvc_example.Models.SelectFactorViewModel

@{
    ViewBag.Title = ViewBag.Title ?? "Select a Factor.";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SelectFactorAsync", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.FactorType)
    <div class="form-group">
        @if (Model.Factors != null)
        {
            foreach (var factor in Model.Factors)
            {
                <div>
                    <label>
                        @Html.RadioButtonFor(m => m.FactorType, factor.Type)
                        @factor.Type
                    </label>
                </div>
            }
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

